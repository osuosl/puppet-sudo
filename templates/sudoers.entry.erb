# Managed by Puppet <%= puppetversion%> 
<% if !comment.empty? -%>
# <%= comment %>
<% end -%>
<% if !option.empty? -%>

<% if option.is_a? Array -%>
Defaults <%= option.join(", ") %>
<% else -%>
Defaults <%= option %>
<% end -%>
<% end -%>
<% if !user_alias.empty? -%>

<% if user_alias.is_a? Array -%>
User_Alias <%= alias_name.upcase %> = <%= user_alias.join(", ") %>
<% else -%>
User_Alias <%= alias_name.upcase %> = <%= user_alias %>
<% end -%>
<% end -%>
<% if !runas_alias.empty? -%>

<% if runas_alias.is_a? Array -%>
Runas_Alias <%= alias_name.upcase %> = <%= runas_alias.join(", ") %>
<% else -%>
Runas_Alias <%= alias_name.upcase %> = <%= runas_alias %>
<% end -%>
<% end -%>
<% if !host_alias.empty? -%>

<% if user_alias.is_a? Array -%>
Host_Alias <%= alias_name.upcase %> = <%= host_alias.join(", ") %>
<% else -%>
Host_Alias <%= alias_name.upcase %> = <%= host_alias %>
<% end -%>
<% end -%>
<% if !cmnd_alias.empty? -%>

<% if cmnd_alias.is_a? Array -%>
Cmnd_Alias <%= alias_name.upcase %> = <%= cmnd_alias.join(", ") %>
<% else -%>
Cmnd_Alias <%= alias_name.upcase %> = <%= cmnd_alias %>
<% end -%>
<% end -%>
<% if !command.empty? -%>

<%= user %> <%= host %>=(<%= runas %>) <% if !tag_spec.empty? -%>
<%= tag_spec -%>:<% end -%>
<% if !cmnd_alias.empty? -%>
<%= alias_name.upcase %>
<% else -%>
<%= command %>
<% end -%>
<% end -%>
